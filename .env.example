# Speech Analysis Configuration
# Copy this to .env and fill in your API keys

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Audio Processing
AUDIO_DEVICE=cpu  # Options: cpu, cuda
WHISPER_MODEL=base  # Options: tiny, base, small, medium, large
MIN_AUDIO_DURATION_SEC=5  # Minimum audio duration for analysis

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=  # Optional: path to log file (empty = console only)

# Model Caching
CACHE_MODELS=true  # Cache loaded models in memory
